<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="320">
    <Grid>
        
        
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>-->
        
        
        <!--<Border Grid.Column="0"
                Background="#FFE8E8E8"
                BorderBrush="#FFCCCCCC"
                BorderThickness="0, 0, 1, 0"/>-->

        <Grid>
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

            <Border x:Name="SidebarPanel"
                    Grid.Row="0" Grid.RowSpan="2"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="DarkGray"
                    Panel.ZIndex="1"
                    Visibility="Collapsed">
            </Border>

            <Button Grid.Row="0"
                    x:Name="HamburgerButton"
                    Click="MenuButton_Click"
                    Background="White"
                    BorderThickness="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Panel.ZIndex="2">
                <Image Source="C:\Users\황재용\Desktop\Img\hamburger.png"
                        Width="20"
                        Height="20"
                        Margin="10"/>

            </Button>
            
            
        <StackPanel Grid.Row="0">

            <StackPanel Orientation="Horizontal">
                <Button Click="MenuButton_Click" 
                        Background="White"
                        BorderThickness="0">
                    <Image Source="C:\Users\황재용\Desktop\Img\hamburger.png"
                           Width="20"
                           Height="20"
                           Margin="10"/>
                </Button>

                <TextBlock Text="표준"
                           FontSize="15"
                           Margin="10"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox x:Name="Display"
                     FontSize="32"
                     TextAlignment="Right"
                     IsReadOnly="True"
                     Margin="10"/>
        </StackPanel>

        <UniformGrid Grid.Row ="1"
                     Columns="4"
                     Margin="10">
            <Button Content="%" Click="Operator_Click"/>
            <Button Content="CE" Click="ClearEntry_Click"/>
            <Button Content="C" Click="Clear_Click"/>
            <Button Click="Delete_Click">
                <Image Source="C:\Users\황재용\Desktop\Img\cancel.png" Width="20" Height="20"/>
            </Button>

            <Button Content="1/x" Click="Reciprocal_Click"/>
            <Button Content="x²" Click="Square_Click"/>
            <Button Content="²√x" Click="SquareRoot_Click"/>
            <Button Content="/" Click="Operator_Click"/>

            <Button Content="7" Click="Button_Click"/>
            <Button Content="8" Click="Button_Click"/>
            <Button Content="9" Click="Button_Click"/>
            <Button Content="X" Click="Operator_Click"/>

            <Button Content="4" Click="Button_Click"/>
            <Button Content="5" Click="Button_Click"/>
            <Button Content="6" Click="Button_Click"/>
            <Button Content="-" Click="Operator_Click"/>

            <Button Content="1" Click="Button_Click"/>
            <Button Content="2" Click="Button_Click"/>
            <Button Content="3" Click="Button_Click"/>
            <Button Content="+" Click="Operator_Click"/>

            <Button Content="+/-" Click="Operator_Click"/>
            <Button Content="0" Click="Button_Click"/>
            <Button Content="." Click="Operator_Click"/>
            <Button Content="=" Click="Result_Click" Background="#0078D7" Foreground="White"/>

        </UniformGrid>
            </Grid>
    </Grid>
</Window>
